{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "es2015", "esnext"],
    "jsx": "react-jsx",
    "module": "node16",
    "moduleResolution": "node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
